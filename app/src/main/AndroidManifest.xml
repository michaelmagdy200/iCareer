<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.icareer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICareer">
        <activity
            android:name=".Company.CompanyHome"
            android:label="@string/title_activity_company_home"></activity>
        <activity
            android:name=".company.CompanyHome"
            android:label="@string/title_activity_company_home"></activity>
        <activity
            android:name=".jobSeeker.JobSeekerHome"
            android:label="@string/title_activity_job_seeker_home" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActitvity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>